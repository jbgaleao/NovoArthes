@model IEnumerable<Arthes.DATA.Models.Revista>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Revistas</h1>

<p>
    <a asp-action="Create">Nova Revista</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.Label("Tema")
            </th>
            <th>
                @Html.Label("Número Edição")
            </th>
            <th>
                @Html.Label("Mês Edição")
            </th>
            <th>
                @Html.Label("Ano Edição")
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tema)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumEdicao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MesEdicao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnoEdicao)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a>
                <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Id"><i class="fa fa-search"></i></a>
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id"><i class="fa fa-trash"></i></a>
                <a asp-action="~/Receita/ListaReceitasPorRevistaId" asp-route-id="@item.Id">Ver Receitas da Revista</a> |
                @*@Html.ActionLink("Ver Receitas da Revista","ListaReceitasPorRevistaId","Receita", new { @id = @item.Id} )*@
            </td>
        </tr>
}
    </tbody>
</table>
