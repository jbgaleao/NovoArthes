@model IEnumerable<Arthes.DATA.Models.LinhaReceita>

@{
    ViewData["Title"] = "Index";
}

<h1>Linha-Receita</h1>

<p>
    <a asp-action="Create">Nova Linha-Receita</a>
</p>
<table class="table">
    <thead>
        <tr>            
            <th>
                @Html.Label("Código da Linha")
            </th>
            <th>
                @Html.Label("Nome da Cor")
            </th>

            <th>
                @Html.Label("Receita")
            </th>
            <th>
                @Html.Label("Nivel de Dificuldade")
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>               
                <td>
                    @Html.DisplayFor(modelItem => item.Linha.CodLinha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Linha.NomeCor)
                </td>

                <td>
                    @*  @Html.DisplayFor(modelItem => item.Receita.Nome)*@
                     @Html.ActionLink(@item.Receita.Nome,"Details","Receita", new { id= @item.Receita.Id} )
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Receita.NivelDificuldade)
                </td>

                <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a>
                <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Id"><i class="fa fa-search"></i></a>
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
