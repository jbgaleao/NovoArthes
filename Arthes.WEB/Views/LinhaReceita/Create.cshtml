@model Arthes.WEB.Models.LinhaReceitaVM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>LinhaReceita</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdReceita" class="control-label"></label>
                @Html.DropDownListFor(model => model.IdReceita, new SelectList(ViewBag.vbReceita, "Value", "Text"), new {@class="form-control"})
            </div>
            <div class="form-group">
                <label asp-for="IdLinha" class="control-label"></label>
                @Html.DropDownListFor(model => model.IdLinha, new SelectList(ViewBag.vbLinha, "Value", "Text"), new {@class="form-control"})
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
