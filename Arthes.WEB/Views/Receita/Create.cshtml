@using Arthes.DATA.Models.Enum
@model Arthes.DATA.Models.Receita

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Receita</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Altura" class="control-label"></label>
                <input asp-for="Altura" class="form-control" />
                <span asp-validation-for="Altura" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NivelDificuldade" class="control-label"></label>
                <select asp-for="NivelDificuldade" class="form-control" asp-items="Html.GetEnumSelectList<NivelDificuldade>()"></select>
                <span asp-validation-for="NivelDificuldade" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdRevista" class="control-label"></label>
                <select asp-for="IdRevista" class="form-control" asp-items="ViewBag.IdRevista"></select>
            </div>

            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.IdRevistaNavigation.Tema)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IdRevistaNavigation.NumEdicao)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IdRevistaNavigation.MesEdicao)
                        </th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(item => item.IdRevistaNavigation.Tema)
                            </td>
                            <td>
                                @Html.DisplayFor(item => item.IdRevistaNavigation.NumEdicao)
                            </td>
                            <td>
                                @Html.DisplayFor(item => item.IdRevistaNavigation.MesEdicao)
                            </td>

                        </tr>
                    }
                </tbody>
            </table>



            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
