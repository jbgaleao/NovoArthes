@model IEnumerable<Arthes.DATA.Models.Receita>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Altura)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NivelDificuldade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdRevistaNavigation.Tema)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdRevistaNavigation.MesEdicao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdRevistaNavigation.AnoEdicao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Altura)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NivelDificuldade)
                </td>
                <td>
                    @Html.ActionLink(@item.IdRevistaNavigation.Tema,"Details","Revista", new { id= @item.IdRevistaNavigation.Id} )
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdRevistaNavigation.MesEdicao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdRevistaNavigation.AnoEdicao)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
