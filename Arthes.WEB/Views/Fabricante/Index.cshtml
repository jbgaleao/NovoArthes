@model IEnumerable<Arthes.DATA.Models.Fabricante>

@{
    ViewData["Title"] = "Index";
}

<h1>Fabricante de Linhas</h1>

<p>
    <a asp-action="Create">Novo Fabricante</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th style="width: 83%;">
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a>
                <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Id"><i class="fa fa-search"></i></a>
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id"><i class="fa fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
